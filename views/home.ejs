<script src="js/script.js"></script>
<script>
  <% for(var i=0; i < wifi.length; i++){ %>
    //dit heeft Sven gedaan, zijn de markers voor alle plaatsen
    //  L.marker([<%=wifi[i].geometry.y %>, <%=wifi[i].geometry.x %>]).addTo(mymap);
      // dit is voor het adres in de pop up weer te geven
      var pin = pinDefault;
      if("<%=wifi[i].attributes.GEMEENTE %>" == "Merksem") {
        pin = pinRed;
      }
      if("<%=wifi[i].attributes.GEMEENTE %>" == "Berchem") {
        pin = pinBlue;
      }
      if("<%=wifi[i].attributes.GEMEENTE %>" == "Ekeren") {
        pin = pinYellow;
      }


      L.marker([<%=wifi[i].geometry.y %>, <%=wifi[i].geometry.x %>], {icon: pin}).addTo(mymap)
    .bindPopup('<%=wifi[i].attributes.STRAAT %>, <%=wifi[i].attributes.HUISNR,  %>, <%=wifi[i].attributes.GEMEENTE %>')
    .openPopup();





  <% }%>
</script>

